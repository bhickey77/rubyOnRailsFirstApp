<% provide(:title, "Calc") %>
<h1>Calculate the number of days you have been alive</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: dayscalc_path) do |f| %>
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
      
      <%= f.submit "Submit!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>